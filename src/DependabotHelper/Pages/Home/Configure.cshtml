@page "/configure"
@model ConfigureModel
@{
    ViewData["Title"] = "Configure";
    string login = User.GetUserLogin();
}
<div class="row justify-content-center">
    <div class="col-auto">
        <table class="table table-responsive" data-id="@User.GetUserId()">
            <caption>
                GitHub Organizations you have access to.
            </caption>
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Owner</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var owner in Model.Owners)
                {
                    string highlight = owner.Name == login ? "font-weight-bold" : string.Empty;
                    <tr>
                        <td>
                            <img src="@owner.AvatarUrl" class="user-profile" aria-hidden="true" />
                        </td>
                        <td class="align-middle @highlight">@owner.Name</td>
                        <td>
                            <div>
                                <button class="btn btn-secondary repo-search" type="button" data-owner="@owner.Name" data-toggle="modal" data-target="#repo-search-modal">
                                    <span>Select repositories</span>
                                    <span class="fa-solid fa-gears" aria-hidden="true"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                }        
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade"
     id="repo-search-modal"
     role="dialog"
     tabindex="-1"
     aria-labelledby="repo-search-label"
     aria-hidden="true"
     data-backdrop="static"
     data-owner="">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div class="spinner-border table-loader mr-2" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <h5 class="modal-title" id="repo-search-label">Select repositories to manage Dependabot updates for</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <caption>The repositories that belong to this owner.</caption>
                    <thead>
                        <tr>
                            <th scope="col">Repository</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="check-template d-none">
                            <td>
                                <a href="" target="_blank" class="repo-name"></a>
                                <span class="fa-solid fa-lock repo-is-private text-muted d-none" title="Private" aria-label="The repository is private"></span>
                                <span class="fa-solid fa-code-fork repo-is-fork text-muted d-none" title="Fork" aria-label="The repository is a fork"></span>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input position-static repo-enable" type="checkbox" value="" aria-label="">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="repo-save">
                    Save changes
                    <span class="loader spinner-border spinner-border-sm d-none" role="status">
                        <span class="sr-only">Saving...</span>
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>
