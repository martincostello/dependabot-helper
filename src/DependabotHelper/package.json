{
  "name": "dependabothelper",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "An ASP.NET Core application that helps manage dependabot updates across multiple repositories",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts && stylelint --fix lax styles/**/*.css",
    "format-check": "prettier --check scripts/**/*.ts && stylelint styles/**/*.css",
    "lint": "eslint scripts",
    "lint:fix": "eslint scripts --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/dependabot-helper.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "dependencies": {
    "moment": "2.30.1"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@stylistic/eslint-plugin": "5.3.1",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "globals": "16.4.0",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "mini-css-extract-plugin": "2.9.4",
    "prettier": "3.6.2",
    "style-loader": "4.0.0",
    "stylelint": "16.24.0",
    "stylelint-config-standard": "39.0.0",
    "ts-jest": "29.4.3",
    "ts-loader": "9.5.4",
    "tsify": "5.0.4",
    "typescript": "5.9.2",
    "webpack": "5.101.3",
    "webpack-cli": "6.0.1",
    "webpack-remove-empty-scripts": "1.1.1"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "reporters": [
      "default",
      "github-actions"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
