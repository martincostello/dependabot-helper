{
  "name": "dependabothelper",
  "private": true,
  "version": "1.0.0",
  "description": "An ASP.NET Core application that helps manage dependabot updates across multiple repositories",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts && stylelint --fix styles/**/*.css",
    "format-check": "prettier --check scripts/**/*.ts && stylelint styles/**/*.css",
    "lint": "eslint --ext .ts scripts",
    "lint:fix": "eslint --ext .ts scripts --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/dependabot-helper.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.2",
    "@stylistic/eslint-plugin-js": "^2.4.0",
    "@types/jquery": "^3.5.30",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "moment": "^2.30.1",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.1",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "tsify": "^5.0.4",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@stylistic/js",
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "@stylistic/js/indent": [
        "error",
        4,
        { "SwitchCase": 1 }
      ],
      "@stylistic/js/quotes": [
        "error",
        "single"
      ],
      "@typescript-eslint/member-delimiter-style": "error",
      "@typescript-eslint/naming-convention": "error",
      "@typescript-eslint/prefer-namespace-keyword": "error",
      "@typescript-eslint/semi": [
        "error",
        "always"
      ],
      "@typescript-eslint/type-annotation-spacing": "error",
      "brace-style": [
        "error",
        "1tbs"
      ],
      "eqeqeq": [
        "error",
        "smart"
      ],
      "id-blacklist": [
        "error",
        "any",
        "Number",
        "String",
        "string",
        "Boolean",
        "boolean",
        "Undefined",
        "undefined"
      ],
      "id-match": "error",
      "max-len": [
        "error",
        {
            "code": 140,
            "ignoreUrls": true,
            "tabWidth": 4
        }
      ],
      "no-eval": "error",
      "no-redeclare": "error",
      "no-tabs": [
        "error",
        { "allowIndentationTabs": true }
      ],
      "no-trailing-spaces": "error",
      "no-underscore-dangle": "error",
      "no-var": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "bin/",
    "node_modules/",
    "obj/",
    "wwwroot/"
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
